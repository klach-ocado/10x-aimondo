---
import { Toaster } from "@/components/ui/sonner";
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "AImondo" } = Astro.props;
const { user } = Astro.locals;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="bg-gray-800 text-white p-4">
      <div class="container mx-auto flex justify-between items-center">
        <nav class="flex items-center space-x-4">
          <a href="/" class="text-xl font-bold">AImondo</a>
          {
            user && (
              <>
                <a href="/dashboard" class="hover:text-gray-300 text-sm">
                  Dashboard
                </a>
                <a href="/heatmap" class="hover:text-gray-300 text-sm">
                  Heatmap
                </a>
              </>
            )
          }
        </nav>
        <div class="flex items-center space-x-4">
          {
            user ? (
              <>
                <span class="text-sm">{user.email}</span>
                <form method="POST" action="/api/auth/logout">
                  <button type="submit" class="hover:text-gray-300 text-sm">
                    Logout
                  </button>
                </form>
              </>
            ) : (
              <>
                <a href="/auth/login" class="hover:text-gray-300 text-sm">
                  Login
                </a>
                <a href="/auth/register" class="hover:text-gray-300 text-sm">
                  Register
                </a>
              </>
            )
          }
        </div>
      </div>
    </header>
    <main class="h-[calc(100vh-64px)]">
      <slot />
    </main>
    <Toaster client:load position="top-center" richColors />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
