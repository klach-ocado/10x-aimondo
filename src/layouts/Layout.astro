---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="bg-gray-800 text-white p-4">
      <nav class="container mx-auto flex space-x-4">
        <a href="/dashboard" class="hover:text-gray-300">Dashboard</a>
        <a href="/heatmap" class="hover:text-gray-300">Heatmap</a>
      </nav>
    </header>
    <main class="h-[calc(100vh-64px)]">
        <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
